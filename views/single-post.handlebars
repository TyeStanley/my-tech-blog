<div class="form-settings col-12">
  <div id="trim">
    <div class="col-12">
      {{> post-info post}}
    </div>
    {{#if loggedIn}}
    <form class="comment-form form-group col-12">
      <div class="form-group">
        <textarea class="form-control" name="comment-body"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">add comment</button>
        <button type="button" class="upvote-btn btn btn-primary">upvote</button>
      </div>
    </form>
    {{/if}}
    <div class="col-12 padding-adjust">
      <h3>Comments</h3>
      {{> comments post.comments}}
    </div>
  </div>
</div>

{{#if loggedIn}}
<script src="/js/comment.js"></script>
<script src="/js/upvote.js"></script>
{{/if}}